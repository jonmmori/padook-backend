generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =================== USER ===================
enum UserRole {
    player
    clubowner
    admin
}
model User {
  id        String   @id @default(uuid())
  username  String   @unique
  name      String
  email     String   @unique
  password  String
  phone     String?
  role      UserRole @default(player)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
